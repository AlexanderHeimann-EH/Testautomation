                            </Directory>
                        </Directory>
                    </Directory>
                  </Directory>
              </Directory>
            </Directory>
          </Directory>
        </Directory>
      </Directory>

      <Directory Id="ProgramMenuFolder">
        <Directory Id="AzureSdkPythonFolder" Name="$(var.versionedStartMenuFolder)"/>
      </Directory>
    </Directory> 

    <ComponentGroupRef Id="AzureDeploymentCmdlets"/>
  </Module>
</Wix>
